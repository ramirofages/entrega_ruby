<%= form_for @receipt, url: {action: "create"} do |f| %>

  <% if @receipt.errors.any? %>
    <div id="error_explanation">
      <h4 class="header"><%= pluralize(@receipt.errors.count, "error") %> prohibited this receipt from being saved:</h2>

      <ul class="collection">
      <% @receipt.errors.full_messages.each do |message| %>
        <li class="collection-item"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :client_id,  hidden: true %>

  <div class="field">
    <%= f.label "Persona a facturar: " %>
    <%= f.select(:person_id, options_for_select(@people, @receipt.new_record?? 0 : @receipt.person.id), {}, { :class =>"browser-default", :required=>true} ) %>   
  </div>
  <br>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :required=>true %>
  </div>
  <div class="field">
    <%= f.label :total_amount %><br>
    <%= f.number_field :total_amount, :required=>true %>
  </div>
  <div class="field">
    <%= f.label :emission_date %><br>
    <%= f.date_field :emission_date, :class =>"datepicker", :required=>true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
